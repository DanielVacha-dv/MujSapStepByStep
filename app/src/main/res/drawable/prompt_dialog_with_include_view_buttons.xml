<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/promptDialogTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone">

        <ImageView
            android:id="@+id/promptDialogTitleImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:padding="@dimen/appPadding"
            android:visibility="gone" />

        <TextView
            android:id="@+id/promptDialogTitleText"
            style="@style/dialogTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/promptDialogTitleImage"
            android:gravity="center_vertical"
            android:visibility="gone" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/promptDialogMain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/promptDialogTitle"
        android:gravity="center"
        android:padding="@dimen/appPadding"
        android:visibility="gone" />

    <include
        android:id="@+id/promptDialogButtons"
        layout="@layout/prompt_dialog_buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/promptDialogMain" />

</RelativeLayout>