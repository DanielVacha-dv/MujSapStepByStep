<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="imageViewSplashLogo">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:contentDescription">@string/Logo</item>
        <item name="android:src">@drawable/kct_logo</item>
    </style>

    <style name="textViewSplashLoading">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/textViewDefaultMarginTop</item>
        <item name="android:text">@string/Loading</item>
        <item name="android:textSize">@dimen/textViewLargeTextSize</item>
        <item name="android:textColor">@color/appColor</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>