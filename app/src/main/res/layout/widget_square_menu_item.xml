<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="@dimen/widgetKMFSquareMenuItemPadding">

    <TextView
        android:id="@+id/tvWidgetSquareMenuItem_title"
        style="@style/TextView.KMFSquareMenuItemTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"/>

    <TextView
        android:id="@+id/tvWidgetSquareMenuItem_subtitle"
        style="@style/TextView.KMFSquareMenuItemSubTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvWidgetSquareMenuItem_title"
        android:layout_alignParentLeft="true"/>

    <cz.kctdata.kmf.wigets.KMFImageTextView
        android:id="@+id/itvWidgetSquareMenuItem_image"
        style="@style/TextView.KMFSquareMenuItemImage"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"/>

    <TextView
        android:id="@+id/tvWidgetSquareMenuItem_value"
        style="@style/TextView.KMFSquareMenuItemValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>